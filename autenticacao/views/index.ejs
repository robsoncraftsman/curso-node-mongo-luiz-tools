<%- include top.ejs %>
    <table class="table table-bordered table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th>E-Mail</th>
          <th>Perfil</th>
        </tr>
      </thead>
      <tbody>
        <% 
        if(users) {
          for (user of users) {
            %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.profile %></td>
            </tr>
            <%
          }
        }
        %>
      </tbody>
    </table>

    <nav>
      <ul class="pagination">
      <%
      for(var i=1; i <= totalPaginas; i++){
      %>
        <li class="page-item">
          <a href="/index/<%= i %>" class="page-link">
            <%= i %>
          </a>
        </li>
      <%
      }
      %>
      </ul>
    </nav>

    <div class="alert alert-info">
      <%= usersCount %> usuários cadastrados
    </div>
    <p>
      <a href="/users/signup" class="btn btn-primary">Cadastrar</a>
    <% if(profile === 'ADMIN'){ %>
      <a href="/reports" class="btn btn-secondary">Relatórios</a>
    <% } %>
      <a href="/logoff" class="btn btn-secondary"/>Sair</a>
    </p>
<%- include botton.ejs %>
